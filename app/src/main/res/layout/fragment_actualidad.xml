<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="co.xintana.unionmagdalenafanapp.fragments.NoticiasFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/tv_proximo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/proximo"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_torneo_proximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="12sp"
            tools:text="Torneo Águila 2017 - I, Fecha 4 "
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_proximo_label"
            app:layout_constraintBottom_toTopOf="@+id/tv_proximo_label"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@+id/tv_proximo_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_proximo_label"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/tv_mes_proximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp"
                tools:text="Oct" />

            <TextView
                android:id="@+id/tv_dia_proximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp"
                tools:text="25" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon_proximo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            tools:background="@drawable/ic_valledupar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toRightOf="@+id/linearLayout"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_hora_proximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="18sp"
            tools:text="8:45p"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_icon_proximo"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_icon_proximo"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon_proximo"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/linearLayout2">

            <TextView
                android:id="@+id/tv_equipo_proximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="37dp"
                tools:text="Valledupar F.C." />

            <TextView
                android:id="@+id/tv_proximo_estadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintLeft_toLeftOf="@+id/tv_equipo_proximo"
                app:layout_constraintTop_toBottomOf="@+id/tv_equipo_proximo"
                tools:text="Armando Maestre Pavajeau, Valledupar" />
        </LinearLayout>

        <View
            android:layout_width="2000dp"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorControlHighlight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/tv_ultimo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_ultimo"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />
        <TextView
            android:id="@+id/tv_torneo_ultimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="12sp"
            tools:text="Torneo Águila 2017 - I, Fecha 3 "
            app:layout_constraintTop_toBottomOf="@+id/tv_ultimo_label"
            app:layout_constraintBottom_toTopOf="@+id/tv_ultimo_label"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/tv_torneo_proximo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@+id/tv_ultimo_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_ultimo_label"
            android:id="@+id/linearLayout3">

            <TextView
                android:id="@+id/tv_mes_ultimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp"
                tools:text="Oct" />

            <TextView
                android:id="@+id/tv_dia_ultimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp"
                tools:text="25" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/linearLayout3"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            android:id="@+id/linearLayout4">

            <TextView
                android:id="@+id/tv_equipo_local_ultimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp"
                tools:text="Unión Magdalena" />

            <TextView
                android:id="@+id/tv_equipo_visita_ultimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Real Santander" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/tv_torneo_ultimo">
            <TextView
                android:id="@+id/tv_goles_local_ultimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="112dp"
                tools:text="2" />
            <TextView
                android:id="@+id/tv_goles_visita_ultimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="112dp"
                tools:text="2" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="2000dp"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorControlHighlight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>
    </android.support.constraint.ConstraintLayout>
</layout>